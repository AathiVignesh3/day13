<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 <div class="mb-3 row">

    <%= f.label :first_name, style: "display: block", class:"col-sm-4 col-form-label"%>
     <div class="col-sm-4">
    <%= f.text_field :first_name,autofocus: true,autocomplete: "first_name" ,class:"form-control col-6" %>
    
    </div>
    </div>

  
  <div class="mb-3 row">
    <%= f.label :last_name, style: "display: block", class:"col-sm-4 col-form-label"%>
     <div class="col-sm-4">
    <%= f.text_field :last_name,autofocus: true,autocomplete: "last_name", class:"form-control col-6" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :dob, style: "display: block", class:"col-sm-4 col-form-label" %>
     <div class="col-sm-4">
    <%= f.date_field :dob,autofocus: true, class:"form-control col-6" %>
    </div>
  </div>


  <div class="field mb-3 row" >
    <%= f.label :email , class:"col-sm-4 col-form-label"  %><br />
    <div class="col-sm-4">  
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control col-6" %>
  </div>
  </div>

  <div class="field mb-3 row">
  <div class="col-sm-4">
    <%= f.label :password, class:" col-form-label"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>
    
   <div class="col-sm-4">  
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-6"  %>
  </div>
  </div>

  <div class="field mb-3 row">
    <%= f.label :password_confirmation , class:"col-sm-4 col-form-label" %><br />
    <div class="col-sm-4">  
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-6"  %>
  </div>
  </div>

  <div class="actions row">
  <div class="col-sm-4">
    <%= f.submit "Sign up",class:"btn btn-success" %>
  </div>
  </div>
<% end %>
<br><br>
<%= link_to "Log in", new_session_path(resource_name)%><br />
