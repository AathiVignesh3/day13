<p style="color: green"><%= notice %></p>

<center><h1>Tasks</h1></center>

<div id="tasks">
<table class="table">
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Due Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @tasks.each do |task| %>
   <tr scope="row"> <%= render task %></tr>
  <% end %>
  </tbody>
</table>
</div>

<%= link_to "New task", new_task_path ,class:"btn btn-success"%>
