<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <%= form.label :name, style: "display: block", class:"col-sm-4 col-form-label" %>
       <div class="col-sm-4">
    <%= form.text_field :name, class:"form-control col-6" %>
  </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :due_date, style: "display: block", class:"col-sm-4 col-form-label" %>
      <div class="col-sm-4">  
    <%= form.date_field :due_date, class:"form-control col-6" %>
  </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :status, style: "display: block", class:"col-sm-4 col-form-label" %>
   (Completed/pending)
        <div class="col-sm-4">
    <%= form.check_box :status ,class:"form-check-input"%>
  </div>
  </div>
  <% value={} %>
<% User.all.each {|x| value[x.id] = x.first_name}%>
  <div class="mb-3 row">
    <%= form.label :User, style: "display: block", class:"col-sm-4 col-form-label" %>
   <div class="col-sm-4">
    <%= form.select :user_id, :collection => value.sort.map {|k,v| [v,k]} %>
  </div>
  </div>

  <div class="mb-3 row col-4 m-auto">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
